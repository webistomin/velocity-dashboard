{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "jsx": "preserve",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "components/*": [ "./components/*" ],
      "types/*": [ "./types/*" ],
      "server/*": [ "./server/*" ],
      "~/*": [ "./*" ],
      "@/*": [ "./*" ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/nuxtjs__auth",
      "@nuxtjs/axios",
      "vuelidate"
    ]
  },
  "include": [
    "components/**/*.tsx",
    "components/**/*.ts",
    "layouts/**/*.tsx",
    "layouts/**/*.ts",
    "pages/**/*.tsx",
    "pages/**/*.ts",
    "types/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
